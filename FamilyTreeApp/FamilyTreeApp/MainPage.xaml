<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:skia="clr-namespace:SkiaSharp.Views.Maui.Controls;assembly=SkiaSharp.Views.Maui.Controls"
             x:Class="FamilyTreeApp.MainPage">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Menü Bar -->
        <Grid Grid.Row="0" BackgroundColor="{StaticResource Primary}" Padding="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <Label Text="Hanedan Soy Ağacı" 
                   FontSize="18" 
                   FontAttributes="Bold" 
                   TextColor="White" 
                   VerticalOptions="Center"/>
            
            <Button Grid.Column="1"
                    Text="📥 Dışa Aktar (PNG)"
                    BackgroundColor="Transparent"
                    TextColor="White"
                    Clicked="OnExportClicked"/>
        </Grid>

        <skia:SKCanvasView Grid.Row="1"
                           x:Name="canvasView" 
                           PaintSurface="OnCanvasViewPaintSurface"
                           EnableTouchEvents="True">
            <skia:SKCanvasView.GestureRecognizers>
                <PointerGestureRecognizer PointerMoved="OnPointerMoved"
                                          PointerPressed="OnPointerPressed"
                                          PointerReleased="OnPointerReleased"/>
            </skia:SKCanvasView.GestureRecognizers>
        </skia:SKCanvasView>

        <Button Text="+"
            FontSize="30"
            WidthRequest="60"
            HeightRequest="60"
            CornerRadius="30"
            BackgroundColor="{StaticResource Primary}"
            TextColor="White"
            HorizontalOptions="End"
            VerticalOptions="End"
            Margin="20"
            Clicked="OnAddPersonClicked"/>
    </Grid>

</ContentPage>