<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FamilyTreeApp.PersonInputPage"
             BackgroundColor="#F0F0F0">

    <Frame HorizontalOptions="Center" VerticalOptions="Center" 
           CornerRadius="15" WidthRequest="300" Padding="20" BackgroundColor="White">
        <VerticalStackLayout Spacing="15">

            <Label x:Name="TitleLabel" Text="Yeni Kişi Ekle" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>

            <Entry x:Name="NameEntry" Placeholder="İsim Giriniz (Örn: IV. Murad)" />

            <Label Text="Cinsiyet:" />
            <Picker x:Name="GenderPicker" SelectedIndex="0">
                <Picker.Items>
                    <x:String>Erkek</x:String>
                    <x:String>Kadın</x:String>
                </Picker.Items>
            </Picker>

            <HorizontalStackLayout Spacing="10" HorizontalOptions="Center">
                <Button Text="İptal" BackgroundColor="Gray" Clicked="OnCancelClicked"/>
                <Button x:Name="SaveButton" Text="Kaydet" BackgroundColor="#2196F3" Clicked="OnSaveClicked"/>
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </Frame>
</ContentPage>